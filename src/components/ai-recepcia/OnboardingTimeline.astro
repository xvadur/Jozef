---
import AnimatedBlock from "../ui/AnimatedBlock.tsx";

const timeline = [
  { day: "Deň 1–3", title: "Mapovanie", desc: "Call flow, FAQ, fallback pravidlá." },
  { day: "Deň 4–7", title: "Setup", desc: "Technický setup + interné testy." },
  { day: "Týždeň 2", title: "Limitovaný live", desc: "Spustenie na časti trafficu + monitoring." },
  { day: "Týždeň 3", title: "Optimalizácia", desc: "Úpravy podľa reálnych hovorov." },
  { day: "Týždeň 4", title: "Report & Scale", desc: "Výsledkový report + rozhodnutie o ďalšom režime." },
];
---
<section class="max-w-7xl mx-auto px-6 pb-12">
  <div class="grid gap-3">
    <AnimatedBlock client:load delay={0}>
      <div class="p-6 block-hover" style="border: var(--border-brutal); box-shadow: var(--shadow-brutal); background-color: var(--color-silver);">
        <p class="text-xs font-bold uppercase tracking-widest mb-1" style="color: var(--color-blue-deep);">Onboarding</p>
        <h2 class="text-2xl font-light">Ako vyzerá prvých 30 dní</h2>
      </div>
    </AnimatedBlock>
    <div class="grid gap-3 md:grid-cols-5">
      {timeline.map((t, i) => (
        <AnimatedBlock client:load delay={0.1 + i * 0.07}>
          <div class="p-6 block-hover" style="border: var(--border-brutal); box-shadow: var(--shadow-brutal); background-color: var(--color-bg);">
            <p class="text-xs font-bold uppercase tracking-widest mb-2" style="color: var(--color-blue-deep);">{t.day}</p>
            <h3 class="text-base font-semibold mb-2">{t.title}</h3>
            <p class="text-xs font-light" style="opacity: 0.7;">{t.desc}</p>
          </div>
        </AnimatedBlock>
      ))}
    </div>
  </div>
</section>
