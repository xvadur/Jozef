---
import ScrollReveal from "./ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
---

<section
  class="max-w-6xl mx-auto px-4 py-24 md:py-36"
  aria-labelledby="hero-heading"
>
  <div class="max-w-3xl">
    <ScrollReveal client:load>
      <span
        class="inline-block text-sm font-medium text-sky-500 tracking-widest uppercase mb-6"
      >
        Adam Rudavský
      </span>
    </ScrollReveal>

    <ScrollReveal client:load delay={0.1}>
      <h1
        id="hero-heading"
        class="text-6xl md:text-7xl font-bold text-gray-900 mb-6 leading-none tracking-tight"
      >
        xvadur
      </h1>
    </ScrollReveal>

    <ScrollReveal client:load delay={0.2}>
      <p class="text-2xl md:text-3xl text-gray-500 mb-6 font-light leading-snug">
        10 rokov urgentná medicína.<br />
        Teraz budujem s AI.
      </p>
    </ScrollReveal>

    <ScrollReveal client:load delay={0.3}>
      <p class="text-lg text-gray-400 mb-12 max-w-xl leading-relaxed">
        Učím sa budovať agentov, automatizácie a nástroje ktoré fungujú.
        Zdieľam čo objavím — bez filtra, priamo z procesu.
      </p>
    </ScrollReveal>

    <ScrollReveal client:load delay={0.4}>
      <div class="flex flex-col sm:flex-row gap-4">
        <a
          href="#xvadur"
          class="inline-flex items-center gap-2 px-8 py-3.5 bg-gray-900 text-white rounded-xl hover:bg-gray-700 transition-colors font-medium"
        >
          <span>Kto som</span>
          <Icon name="tabler:arrow-down" class="w-4 h-4" aria-hidden="true" />
        </a>
        <a
          href="#openclaw"
          class="inline-flex items-center gap-2 px-8 py-3.5 bg-sky-50 text-sky-600 border border-sky-200 rounded-xl hover:bg-sky-100 transition-colors font-medium"
        >
          <span>openclaw →</span>
        </a>
      </div>
    </ScrollReveal>
  </div>
</section>
